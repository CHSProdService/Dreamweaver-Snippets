<?xml version="1.0" encoding="utf-8"?>
<snippet name="Letters Only (maximum 5 characters)" description="A text input form field with a maximum of 5 characters).  Taken from http://wet-boew.github.io/wet-boew/demos/formvalid/formvalid-en.html" preview="code" type="block">
<insertText location="beforeSelection">
<![CDATA[<div class="form-group">
   <label for="letters1"><span class="field-name">Letters only</span> (maximum of 5 characters)</label>
   <input class="form-control" id="letters1" name="letters1" type="text" size="5" maxlength="5" pattern="[A-Za-z\s]" data-rule-lettersonly="true" />
</div>
]]>
</insertText>
